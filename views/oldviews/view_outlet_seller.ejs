<% include layout/header %>
<% include layout/navigation %>

<div class="m-content">
    <div class="m-portlet m-portlet--mobile">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <h3 class="m-portlet__head-text">
                        Outlet Seller
                    </h3>
                </div>
            </div>
            <div class="m-portlet__head-tools">
                <ul class="m-portlet__nav">
                    <li class="m-portlet__nav-item">
                        <button id="btnadd" type="button"
                            class="btn m-btn--square  m-btn m-btn--gradient-from-brand m-btn--gradient-to-info">
                            <i class="la la-map-pin"></i>
                            <span>
                                Add Outlet Seller
                            </span>
                        </button>
                    </li>
                    <li class="m-portlet__nav-item"></li>
                </ul>
            </div>
        </div>
        <div class="m-portlet__body">
            <!--begin: Datatable -->
            <table class="table table-striped- table-bordered table-hover table-checkable" id="tables">
                <thead>
                    <tr>
                        <th>No</th>
                        <th>Name</th>
                        <th>Address</th>
                        <th>Location</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <%if(outletSeller.data.success){%>
                            <% outletSeller.data.data.forEach(
                            (rows) => { %>
                            <tr>
                                <td><%=rows.id%></td>
                                <td><%=rows.name%></td>
                                <td><%=rows.address%></td>
                                <td><%=rows.location%></td>
                                <td>
                                    <button id="btnupdate" type="button"
                                        onclick='showEditDialog(`<%=rows.id%>`, `<%=rows.name%>`, `<%=rows.address%>`, `<%=rows.location%>`)'
                                        class="btn m-btn--square  m-btn m-btn--gradient-from-brand m-btn--gradient-to-warning">
                                        <span>
                                            Update
                                        </span>
                                    </button>

                                    <% if(menu.data.data.employee){ %>
                                    <a href="/employee/<%=rows.id%>/2" type="button"
                                        class="btn m-btn--square  m-btn m-btn--gradient-from-brand m-btn--gradient-to-warning">
                                        <span>
                                            Employee
                                        </span>
                                    </a>
                                    <% } %>

                                </td>
                            </tr>
                            <% }
                        ) %>
                    <%}%>
                </tbody>
            </table>
        </div>
    </div>
</div>

<!--Modal::Add & Edit-->
<div class="modal fade" id="m_modal_create_update" role="dialog" aria-labelledby="" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="">
                    <p id="titleaction"></p>
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true" class="la la-remove"></span>
                </button>
            </div>
            <form id="foutletseller" class="m-form m-form--fit m-form--label-align-right" action="" method="">
                <div class="modal-body">
                    <div class="form-group m-form__group row ">
                        <input type="text" class="form-control" id="_method" hidden name="_method">
                        <input type="text" class="form-control" id="id_outlet" hidden name="id_outlet">
                        <div class="col-lg-6">
                            <label>Name:</label>
                            <input id="name" type="text" class="form-control m-input" placeholder="Name" name="name">
                        </div>
                    </div>
                    <div class="form-group m-form__group row ">
                        <div class="col-lg-6">
                            <label>Address:</label>
                            <input id="address" type="text" class="form-control m-input" placeholder="Address"
                                name="address">
                        </div>
                    </div>
                    <div class="form-group m-form__group row ">
                        <div class="col-lg-6">
                            <label>Location:</label>
                            <input id="location" type="text" class="form-control m-input" placeholder="Location"
                                name="location">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn m-btn m-btn--gradient-from-brand m-btn--gradient-to-info"
                        data-dismiss="modal" aria-label="Close">
                        Cancel
                    </button>
                    <button type="button" class="btn m-btn m-btn--gradient-from-focus m-btn--gradient-to-danger"
                        id="buttonadd">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!--Modal::Delete-->
<div class="modal fade" id="m_modal_delete" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">
                    Delete Outlet Seller
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">
                        &times;
                    </span>
                </button>
            </div>
            <form id="fdoutletseller" class="m-form m-form--fit m-form--label-align-right" action="" method="">
                <input type="text" class="form-control" id="_method_delete" hidden name="_method">
                <input type="text" class="form-control" id="id_company_delete" hidden name="id_company">
                <div class="modal-body">
                    <p>
                        Are you sure to delete this data?
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">
                        No
                    </button>
                    <button type="button" class="btn btn-primary" id="btndelete">
                        Sure
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>


<% include layout/footer %>
<% include layout/script %>

<script type="text/javascript">
    $('#btnadd').on('click', function () {
        Clear();
        $('#titleaction').html('<h4>Add Outlet Seller</h4>');
        $('#m_modal_create_update').modal('show');
        $('#foutletseller').attr('action', '/process-outlet-seller');
        $('#foutletseller').attr('method', 'POST');
        $('#_method').val('POST');
    })

    $('#buttonadd').click(function () {
        var form = $('#foutletseller');
        $.ajax({
            url: $('#foutletseller').attr('action'),
            data: $('#foutletseller').serialize(),
            method: $('#_method').val(),
            success: function (res) {
                if (res) {
                    if (res.success == true) {
                        setInterval(() => { window.location.reload(); }, 1000);
                        $('#m_select2_modal').modal('hide');
                        swal({ position: "center", type: "success", title: "Your data has been saved", showConfirmButton: !1, timer: 1500 })
                    } else {
                        swal({ position: "center", type: "error", title: res.message, showConfirmButton: !1, timer: 1500 })
                    }
                }
            }
        })
    })

    $('#btndelete').on('click', e => {
        var form = $('#fdcompany');
        $.ajax({
            url: $('#fdoutletseller').attr('action'),
            data: $('#fdoutletseller').serialize(),
            method: $('#_method_delete').val(),
            success: function (res) {
                if (res) {
                    if (res.success == true) {
                        setInterval(() => { window.location.reload(); }, 1000);
                        $('#m_select2_modal').modal('hide');
                        swal({ position: "center", type: "success", title: "Your data has been deleted", showConfirmButton: !1, timer: 1500 })
                    } else {
                        swal({ position: "center", type: "error", title: res.message, showConfirmButton: !1, timer: 1500 })
                    }
                }
            }
        })
    })

    function showEditDialog(id, name, address, location) {
        Clear();
        $('#titleaction').html('<h4>Update Outlet Seller</h4>');
        $('#m_modal_create_update').modal('show');
        $('#foutletseller').attr('action', '/process-outlet-seller');
        $('#_method').val('PUT');
        $('#id_outlet').val(id);
        $('#name').val(name);
        $('#address').val(address);
        $('#location').val(location);
    }

    function showDeleteDialog(id) {
        Clear();
        $('#m_modal_delete').modal('show');
        $('#fdoutletseller').attr('action', '/process-outlet-seller');
        $('#_method_delete').val('DELETE');
        $('#id_company_delete').val(id);
    }

    function Clear() {
        var elements = document.getElementsByTagName("input");
        var elementsselect = document.getElementsByClassName("form-control");
        for (var ii = 0; ii < elements.length; ii++) {
            if (elements[ii].type == "text" || elements[ii].type == "number") {
                elements[ii].value = "";
            }
        }
        for (var ii = 0; ii < elementsselect.length; ii++) {
            elementsselect[ii].value = "";
        }
    }
</script>